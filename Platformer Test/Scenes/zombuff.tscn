script/source = "extends CharacterBody2D

func _ready():
	randomize()

@onready var animation = $AnimatedSprite2D
const SPEED = 25
var flipped = 0
var gravity = ProjectSettings.get_setting(\"physics/2d/default_gravity\")
var steps = 0
@onready var zombite = $Zombite



func idle():
	animation.play(\"Idle\")
	velocity.x = 0
	await get_tree().create_timer(10.0).timeout

func walk_left():
	animation.play(\"Walk\")
	velocity.x = SPEED
	animation.scale.x = 1
	await get_tree().create_timer(10.0).timeout

func walk_right():
	animation.play(\"Walk\")
	velocity.x = SPEED * -1
	animation.scale.x = -1
	await get_tree().create_timer(10.0).timeout

func _process(delta):
	var random = randi_range(1,1)
	
	if not is_on_floor():
		velocity.y += gravity * delta
		animation.play(\"Idle\")
	
	elif random == 0:
		idle()
		
	elif random == 1:
		walk_left()

	else:
		animation.play(\"Walk\")
		velocity.x = SPEED * -1
		animation.scale.x = -1
	
	
	move_and_slide()
	
	
	



func _on_area_2d_body_entered(body):
	if not body == self:
		queue_free()
	pass
